<%= @blog.errors.full_messages.join(", ") %>

<%= form_for @blog do |f| %>
  <div>
    <%= f.label :title %> <br>
    <%= f.text_field :title %>
  </div>

  <div>
    <%= f.label :body %> <br>
    <%= f.text_area :body %>
  </div>
  <div>
    <%= f.collection_select :category_id, Category.all, :id, :title %>
  </div>
  <%= f.submit %>
<% end %>
