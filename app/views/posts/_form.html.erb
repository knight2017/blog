

<%= simple_form_for @blog do |f| %>
  <%= f.input :title, placeholder: "at least 3 characters.." %>
  <%= f.input :body, hint: "entry" %>
  <%= f.input :image %>
  <%= f.association :tags, as: :check_boxes %>
  <%= f.association :category, as: :select %>
  <%= f.submit({class: "btn btn-primary"}) %>
<% end %>
