<h1>enter your new password</h1>

<%= @user.errors.full_messages.join(", ") %>
<%= form_for @user do |f| %>
<div>
<%= f.label :password %> <br>
<%= f.password_field :password %>
</div>
<div>
<%= f.label :password_confirmation %> <br>
<%= f.password_field :password_confirmation %>
</div>
<%= f.submit "Change Password" %>
<% end %>
